<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.0"
   xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">        	
	
	<persistence-unit name="cassandra_pu">
        <provider>com.impetus.kundera.KunderaPersistence</provider>
        <class>org.jboss.tools.examples.model.Member</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>     
        <properties>            
            <!-- <property name="kundera.nodes" value="192.168.99.100"/> -->
            <property name="kundera.nodes" value="cassandra2"/>
            <property name="kundera.port" value="9160"/>
            <property name="kundera.keyspace" value="kunderaexamples"/>
            <property name="kundera.dialect" value="cassandra"/>
            <property name="kundera.ddl.auto.prepare" value="update" />
            <property name="kundera.client" value="thrift" />
            <property name="kundera.client.lookup.class"
				value="com.impetus.client.cassandra.thrift.ThriftClientFactory" />
            <!-- <property name="kundera.cache.provider.class" value="com.impetus.kundera.cache.ehcache.EhCacheProvider"/>
            <property name="kundera.cache.config.resource" value="/ehcache-test.xml"/> -->
            <property name="kundera.client.property" value="KunderaLoadConfig.xml" />                   
        </properties>       
    </persistence-unit>
    
</persistence>
